<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Json="clr-namespace:Interface.Json;assembly=Interface" x:Class="Client.Windows.MainPages.Main" 
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*" MinWidth="100" MaxWidth="200"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Users" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <ListView x:Name="UserList" Margin="10,41,10,10" ItemsSource="{Binding}" MouseDoubleClick="ListView_MouseDoubleClick_1" SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Grid.Column="0" Text="{Binding Name}" Foreground="{Binding Color}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <GridSplitter HorizontalAlignment="Left" Padding="0" Margin="0" Width="5" Grid.Column="1" ResizeDirection="Columns"/>
        <Label Content="Rooms" Grid.Column="1" Margin="10,10,10,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
